<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:elevation="2dp">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/circle_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/profile_avatar2x" />

        <TextView
            android:id="@+id/people_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="31dp"
            android:text="Praveen" />

        <TextView
            android:id="@+id/people_designation"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_below="@id/people_name"
            android:layout_marginStart="96dp"
            android:layout_marginTop="4dp"
            android:text="android" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="342dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_baseline_more_vert_24" />

        <TextView
            android:id="@+id/content"
            android:layout_width="320dp"
            android:layout_height="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="46dp"
            android:text="qwerty"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hastag"
            android:layout_width="255dp"
            android:layout_height="15dp"
            android:layout_below="@id/content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="#Network"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/read_more"
            android:layout_width="54dp"
            android:layout_height="15dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="166dp"
            android:layout_toEndOf="@id/hastag"
            android:clickable="true"
            android:focusable="true"
            android:text="Read More"
            android:textColor="#5BBC2E"
            android:textSize="11sp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="166dp"
            android:layout_toEndOf="@id/read_more"
            android:src="@drawable/ic_arrow_icon_right_arrow2x" />

        <ImageView
            android:id="@+id/middle_picture"
            android:layout_width="fill_parent"
            android:layout_height="244dp"
            android:layout_below="@id/hastag"
            android:layout_marginTop="15dp"
            android:src="@drawable/post_image2x" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/middle_picture"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:text="3 hours ago"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/heart_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/middle_picture"
            android:layout_marginStart="259dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_heart_icon_heart_filled2x"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/num_likes"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/middle_picture"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@+id/heart_icon"
            android:text="210"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/comment_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/middle_picture"
            android:layout_marginStart="322dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_comment_icon_comment2x"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/num_comments"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/middle_picture"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@+id/comment_icon"
            android:text="50"
            android:textSize="12sp" />

        <View
            android:id="@+id/centre_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/time_text"
            android:layout_marginTop="4dp"
            android:background="#939598"
            android:minWidth="0.5dp" />

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@id/centre_line"
            android:layout_marginStart="23.5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/oval2x" />

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@id/centre_line"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/pic1"
            android:src="@drawable/oval_12x" />

        <ImageView
            android:id="@+id/pic3"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_below="@id/centre_line"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/pic2"
            android:src="@drawable/oval_22x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_below="@id/centre_line"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/pic3"
            android:text="Liked by KnE and 209 others"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/avatar_pic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/pic1"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22.5dp"
            android:src="@drawable/avatar_12x" />

        <EditText
            android:id="@+id/edit_bar"
            android:layout_width="296dp"
            android:layout_height="36dp"
            android:layout_below="@id/pic1"
            android:layout_marginTop="22.5dp"
            android:layout_toEndOf="@id/avatar_pic"
            android:hint="Add a comment..."
            android:padding="10dp"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/line_solid"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/pic1"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/edit_bar"
            android:src="@drawable/ic_send_arrow_icon_right_line_arrow_grey2x" />
        <ListView
            android:layout_below="@id/line_solid"
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>